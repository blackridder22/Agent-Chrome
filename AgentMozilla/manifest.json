{
  "manifest_version": 2,
  "name": "Agent Mozilla",
  "version": "1.0.0",
  "description": "A Firefox sidebar extension that enables seamless AI chat interactions through configurable webhooks with modern UI and advanced features.",
  
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "<all_urls>"
  ],
  
  "icons": {
    "16": "icons/agent-chrome-16.png",
    "48": "icons/agent-chrome-48.png",
    "128": "icons/agent-chrome-128.png"
  },
  
  "sidebar_action": {
    "default_title": "Agent Mozilla Chat",
    "default_panel": "sidebar.html",
    "default_icon": {
      "16": "icons/agent-chrome-16.png",
      "32": "icons/agent-chrome-48.png"
    }
  },
  
  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Open Agent Mozilla sidebar"
    }
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    "icons/*.png",
    "icons/*.svg"
  ]
}